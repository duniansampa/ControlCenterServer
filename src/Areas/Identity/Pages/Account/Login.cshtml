@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div calss="container" id="account_container">
    <div class="row h-100 w-100 justify-content-center align-items-center">
        <div class="col col-md-7">
            <div class="card text-center">
                <div class="card-header">
                    <div class="card-title display-6 text-dark">Log in</div>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input-group mb-5">
                            <span class="input-group-text" id="inputGroup-username">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                       aria-required="true" placeholder="-" />
                                <label asp-for="Input.Email" class="form-label">Nome de usuário ou email</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-password">
                                <i class="bi bi-lock"></i>
                            </span>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                       aria-required="true" placeholder="-" />
                                <label asp-for="Input.Password" class="form-label">Senha</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div>
                            <div class="checkbox">
                                <label id="rememder-me" asp-for="Input.RememberMe" class="form-label text-muted">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <div class="mb-3">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                    </div>

                    <div class="container mb-3">
                        <div class="row">
                            <div class="col-6">
                                <a id="forgot-password" class="btn btn-link" asp-page="./ForgotPassword">Forgot your password?</a>
                            </div>
                            <div class="col-6">
                                <a id="resend-confirmation" class="btn btn-link" asp-page="./ResendEmailConfirmation">
                                    Resend email confirmation
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }
